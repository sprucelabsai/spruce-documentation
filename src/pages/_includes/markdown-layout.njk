---
layout: base-layout.njk
layoutId: markdown-layout
surpressH1InLayout: false
---
{% from "widgets/navigation.njk" import mainNavTree, tocBlock %}

<div class="side-bar">
  {{ mainNavTree(navigation.mainNav, page) }}
</div>

<div class="main-area">
  {% if not surpressH1InLayout %}
  <h1>{{ title }}</h1>
  {% endif %}
  {{ content | safe }}
</div>

<div class="tocRight">
  {{ tocBlock(tocData) }}
</div>

<div class="header-full-bg"></div>
<div class="sidebar-right-bg"></div>