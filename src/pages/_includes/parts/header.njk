{% from "widgets/svg-icons.njk" import discordMarkIcon, homeIcon, githubLogo, mdiSearch %}
{% from "widgets/assorted-bits.njk" import hamburgerButton %}
{% from "widgets/navigation.njk" import headerNavList %}
<header id="page-header">
  <div id="page-header-top">
    <div id="logo-space">
      <a href="/" id="home-link">
      <picture>
        <source srcset="/assets/img/logo.png" media="(min-width: 900px)">
        <img src="/assets/img/logo.png" alt="logo">
      </picture>
      </a>
    </div>
    
    {{ headerNavList(navigation.headerNav, page) }}
    {{ hamburgerButton() }}
  </div>

  <div id="page-header-bar">
    <nav id="other-nav">
      <a href="/search" title="Search the site">{{ mdiSearch() }}</a>
    </nav>
  </div>
</header>