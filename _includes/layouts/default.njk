<!DOCTYPE html>
<html lang="en-GB">
<head>
    <title>{{ title if title else metadata.title }}</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/index.css" rel="stylesheet">
</head>
<body>
{% if show_header %}
  {% include "general/header.njk" %}
{% endif %}
{% if show_concepts_header %}
  {% include "concepts/concepts_header.njk" %}
{% endif %}
{% if show_ideology_header %}
  {% include "ideology/ideology_header.njk" %}
{% endif %}
{% if show_dev_header %}
  {% include "dev/dev_header.njk" %}
{% endif %}
<main class="relative flex mx-auto max-w-8xl sm:px-2 lg:px-8 xl:px-12">
  
  <!-- Left Sidebar -->
  <aside class="flex-shrink-0 w-1/5 p-4 border-r">
    {% if show_sidebar %}
      {% include "general/sidebar.njk" %}
    {% endif %}
    {% if show_concepts_sidebar %}
      {% include "concepts/concepts_sidebar.njk" %}
    {% endif %}
    {% if show_ideology_sidebar %}
      {% include "ideology/ideology_sidebar.njk" %}
    {% endif %}
    {% if show_dev_sidebar %}
      {% include "dev/dev_sidebar.njk" %}
    {% endif %}
  </aside>
  
  <!-- Main Content -->
  <div class="flex-auto px-4 py-10">
    <article class="">
        <header class="">
            <h1 class="text-3xl font-bold tracking-tight text-slate-900">
              {{ title }}
            </h1>
        </header>
        {% if intro %}
            <p class="mt-2 text-xl text-slate-600">
              {{ intro }}
            </p>
        {% endif %}
        {% if show_video %}
            {% include "general/video.njk" %}
        {% endif %}
        {% if show_concepts_video %}
            {% include "concepts/concepts_video.njk" %}
        {% endif %}
        {% if show_ideology_video %}
            {% include "ideology/ideology_video.njk" %}
        {% endif %}
        {% if show_dev_video %}
            {% include "dev/dev_video.njk" %}
        {% endif %}
        {% if show_home_links %}
            {% include "general/home_links.njk" %}
        {% endif %}
        {% if show_concepts_home %}
            {% include "concepts/concepts_home.njk" %}
        {% endif %}
        {% if show_ideology_home %}
            {% include "ideology/ideology_home.njk" %}
        {% endif %}
        {% if show_dev_home %}
            {% include "dev/dev_home.njk" %}
        {% endif %}
        {% if show_footer %}
            {% include "general/footer.njk" %}
        {% endif %}
        {% if show_footer_navigation %}
            {% include "general/footer_navigation.njk" %}
        {% endif %}
        
        <div class="mt-8 prose prose-slate max-w-none prose-headings:font-semibold prose-headings:tracking-tight
              prose-lead:text-slate-500 prose-a:font-semibold prose-a:underline prose-pre:bg-slate-900">
            {{ content | safe }}
        </div>
    </article>
  </div>

  <!-- Right Sidebar (Table of Contents) -->
  <aside class="flex-shrink-0 w-1/5 p-4 border-l sticky" style="top: 1rem;">
    {% if show_TOC %}
      <h1 class="mt-8 font-bold">Table of Contents</h1>
      {{ content | toc('{"wrapperClass":"my-custom-toc"}') | safe }}
    {% endif %}
  </aside>

</main>
</body>
</html>
